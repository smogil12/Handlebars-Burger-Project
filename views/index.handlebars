<header>
    <h1>Eat the Burger!</h1>
</header><!-- /header -->

<div class="wrapper">
    <div id="create-burger">
        <form action="/api/burgers" method="POST">
            <input id="burger-name" type="text" name="burger_name" placeholder="Create a burger">
            <button id="submit-btn" type="submit">Manifest</button>
        </form>
    </div>

    <section id="burgers-container">
        <div id="burgers-available">
            <h2>Burgers Available</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="burger">
                <button class="eat-btn" type="submit" data-burgerId="{{id}}">EAT</button>
                {{burger_name}} <span>#{{id}}</span>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div id="burgers-devoured">
            <h2>Burger Heaven</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="burger">{{burger_name}} <span>#{{id}}</span></div>
            {{/if}}
            {{/each}}
        </div>
    </section>
</div>